<%= form_for(@contact ) do  |f| %>
    <% if @contact.errors.any? %>
        <div class="row">
          <div id="error_explanation" class="col-md-12">
      <small class=""><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</small>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
          <li class="text-center alert alert-danger"><small><%= message %></small></li>
      <% end %>
      </ul>
    </div>
  
        </div>       
   <% end %>
 
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
        <div class="form-group">
            
            
             <%= f.label(:first_name , "First Name") %>
             <%= f.text_field(:first_name , class: "form-control" , placeholder: "First Name") %>
             
           
         </div>
        
        
       <div class="form-group">
            <%= f.label(:last_name , "Last Name") %>
            <%= f.text_field(:last_name , class: "form-control", placeholder: "Last Name" ) %>
           
            
       </div>

      <div class="form-group">
           <%= f.label(:email , "Email") %>
           <%= f.text_field(:email ,  class: "form-control",placeholder: "email@email.com" ) %>
             
       </div>
       <div class="form-group">
           
           <%= f.label(:present_address , "Present Address") %>
           <%= f.text_field(:present_address , class: "form-control", placeholder: "address") %> 
        
       </div>
       
       <div class="form-group">
           
             <%= f.label(:permanent_address, "Permanent Address") %> 
            
             <%= f.text_field(:permanent_address , class: "form-control" , placeholder: "address")%>

         </div>
         
        <div class="form-group">
            <%= f.label(:about , "About") %>
            
            
            <%= f.text_area(:about , rows: 5 ,  class: "form-control") %>
      

        </div>
        
        <div class="form-group">
             
             <%= f.label(:profile_img , "Profile Image") %> 
             
             <%= f.file_field(:profile_img , class: "form-control" ) %>
             
         </div>

        <div class="form-group">
            
            
             <%= f.label(:facebook_link , "Facebook Link") %>
             <%= f.text_field(:facebook_link , class: "form-control") %>
             
         </div>

        <div class="form-group">
            
             <%= f.label(:google_link, "Google Link") %>
             <%= f.text_field(:google_link  , class: "form-control") %>
             
         </div>

        <div class="form-group">
            
            <%= f.label(:twitter_link  , "Twitter Link") %>
            
            <%= f.text_field(:twitter_link, class: "form-control" ) %>
            
           
         </div>
         
       <div class="form-group">
           
            <%= f.label(:cover_pic , "Cover picture") %>

            <%= f.file_field(:cover_pic , class: "form-control" ) %>
            
             
         
       </div>

       
    </div>  
  </div>
  
  
  <div class="col-md-6 col-md-offset-3">
      
      
    <%= submit_tag "Save" , class: "btn btn-primary btn-block"   %>
  </div>
<% end %>
